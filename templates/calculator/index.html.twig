{% extends 'base.html.twig' %}

{% block title %}Calculator{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="d-flex justify-content-center w-100">
                {{ form_start(form) }}
                <div class="d-flex flex-row">
                    {{ form_errors(form) }}
                    <div class="flex-column min-width">
                        <div class="mb-3">
                            {{ form_row(form.entry) }}
                        </div>
                        <div class="d-flex flex-row">
                            <div class="w-100">
                                {% for calculationType in form.calculationType.vars.choices %}
                                    <button
                                            type="submit"
                                            class="btn btn-primary"
                                            value="{{ calculationType.value }}"
                                            name="{{ form.calculationType.vars.full_name }}"
                                    >{{ calculationType.value }}</button>
                                {% endfor %}
                            </div>
{#                            {{ form_widget(form.reset) }}#}
                            <a href="{{ path('reset') }}" class="btn btn-primary" role="button">Reset</a>

                        </div>
                    </div>
                    <div class="ms-4 d-flex align-items-center">
                        <h1 class="display-1 mb-0">
                            {{ form.vars.data.result }}
                        </h1>
                    </div>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
